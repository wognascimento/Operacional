<telerik:RadWindow x:Class="Operacional.Views.Manutencao.AdicionarFuncoes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.Manutencao"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Header="Funções Manutenção" 
             WindowStartupLocation="CenterOwner"
             Loaded="RadWindow_Loaded">
    
    <Grid>

        <telerik:RadGridView x:Name="ManutFuncaoRow" 
            AutoGenerateColumns="False"
            Margin="2"
            SelectionUnit="Cell"
            ShowGroupPanel="False"
            NewRowPosition="Bottom"
            GroupRenderMode="Flat"
            ItemsSource="{Binding ManutencaoFuncoes}" 
            RowValidated="ManutFuncaoRowValidated" 
            AddingNewDataItem="ManutFuncaoRow_AddingNewDataItem">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="#" DataMemberBinding="{Binding id}" IsReadOnly="True"/>
                <telerik:GridViewComboBoxColumn
                    Header="FUNÇÃO" 
                    Width="*"
                    DataMemberBinding="{Binding funcao}"
                    SelectedValueMemberPath="funcao"
                    DisplayMemberPath="funcao"
                    ItemsSource="{Binding Funcoes}"/>
                <telerik:GridViewDataColumn Header="QUANTIDADE" DataMemberBinding="{Binding qtd}"/>
            </telerik:RadGridView.Columns>
            
        </telerik:RadGridView>

    </Grid>
    
</telerik:RadWindow>
