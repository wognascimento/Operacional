<UserControl x:Class="Operacional.Views.EquipeExterna.RelatorioDiarioWeb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.EquipeExterna" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>

        <telerik:RadGridView 
            x:Name="radGridViewRelatorio" 
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ShowGroupPanel="False"
            GroupRenderMode="Flat"
            SelectionMode="Extended"
            ClipboardCopyMode="Cells, Header"
            IsBusy="{Binding IsBusy}" 
            ItemsSource="{Binding Relatorios}">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="#" DataMemberBinding="{Binding id}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="SIGLA" DataMemberBinding="{Binding sigla_serv}"/>
                <telerik:GridViewDataColumn Header="DATA" DataMemberBinding="{Binding data}" DataFormatString="{} {0:dd/MM/yyyy}"/>
                <telerik:GridViewDataColumn Header="NOITE" DataMemberBinding="{Binding noite}"/>
                <telerik:GridViewDataColumn Header="FASE" DataMemberBinding="{Binding fase}"/>

                <!-- Coluna com botão -->
                <telerik:GridViewColumn Header="Ação">
                    <telerik:GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                        Content="Detalhes"
                        Padding="4,2"
                        Command="{Binding DataContext.AbrirDetalhesCommand, RelativeSource={RelativeSource AncestorType=telerik:RadGridView}}"
                        CommandParameter="{Binding}" />
                        </DataTemplate>
                    </telerik:GridViewColumn.CellTemplate>
                </telerik:GridViewColumn>

            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
    
</UserControl>
