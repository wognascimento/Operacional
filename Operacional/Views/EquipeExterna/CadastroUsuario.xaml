<UserControl x:Class="Operacional.Views.EquipeExterna.CadastroUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Operacional.Views.EquipeExterna" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="UserControl_Loaded">
    
    <Grid>

        <telerik:RadGridView 
            x:Name="radUsuarios" 
            AutoGenerateColumns="False"
            Margin="2"
            SelectionUnit="Cell"
            ShowGroupPanel="False"
            ItemsSource="{Binding Usuarios}" 
            NewRowPosition="Bottom"
            GroupRenderMode="Flat"
            RowValidated="UsuarioRowValidated">
            <telerik:RadContextMenu.ContextMenu>
                <telerik:RadContextMenu>
                    <telerik:RadMenuItem Header="Enviar WEB" Click="OnEnviarWebClick" />
                </telerik:RadContextMenu>
            </telerik:RadContextMenu.ContextMenu>
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="#" DataMemberBinding="{Binding id}" IsReadOnly="True"/>
                <telerik:GridViewComboBoxColumn
                    Header="equipe"
                    DataMemberBinding="{Binding id_equipe}"
                    SelectedValueMemberPath="id"
                    ItemsSource="{Binding Equipes}"
                    DisplayMemberPath="equipe_e" 
                    Width="250" />
                <telerik:GridViewDataColumn Header="nome" DataMemberBinding="{Binding nome}" Width="200"/>
                <telerik:GridViewDataColumn Header="email" DataMemberBinding="{Binding email}" Width="200"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
    
</UserControl>
