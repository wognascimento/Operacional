<UserControl x:Class="Operacional.Views.Transporte.CargaDesmontagem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.Transporte"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>


        <telerik:RadGridView x:Name="radGridView" 
                ItemsSource="{Binding CargasDesmontagem}" 
                AutoGenerateColumns="false"
                ShowGroupPanel="False"
                SelectionMode="Extended"
                ClipboardCopyMode="Cells, Header"
                RowEditEnded="RadGridView_RowEditEnded" >
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="sigla serviço" DataMemberBinding="{Binding sigla_serv}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="estado" DataMemberBinding="{Binding est}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="cidade" DataMemberBinding="{Binding cidade}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="regiao" DataMemberBinding="{Binding regiao}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="distancia" DataMemberBinding="{Binding distancia}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="observação" DataMemberBinding="{Binding obs}" />
                <telerik:GridViewDataColumn Header="num caminhao" DataMemberBinding="{Binding num_caminhoes_desmont}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="caminhao" DataMemberBinding="{Binding caminhao}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="transporte" DataMemberBinding="{Binding transporte}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="transportadora" DataMemberBinding="{Binding trasnportadora}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="placa caminhão" DataMemberBinding="{Binding placa_caminhao}"/>
                <telerik:GridViewDataColumn Header="volume" DataMemberBinding="{Binding volume}"/>
                <telerik:GridViewDataColumn Header="data chegada shopping" DataMemberBinding="{Binding data_chegada_shopping, StringFormat=\{0:dd/MM/yyyy\}}"/>
                <telerik:GridViewDataColumn Header="data saida shopping" DataMemberBinding="{Binding data_saida_shopping, StringFormat=\{0:dd/MM/yyyy\}}"/>
                <telerik:GridViewDataColumn Header="prazo chegada" DataMemberBinding="{Binding prazo_chegada}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="chegada calculada" DataMemberBinding="{Binding chegada_calculada, StringFormat=\{0:dd/MM/yyyy\}}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="data chegada cipolatti" DataMemberBinding="{Binding data_chegada_cipolatti, StringFormat=\{0:dd/MM/yyyy\}}"/>
                <telerik:GridViewDataColumn Header="volume carga desmontagem" DataMemberBinding="{Binding volume_carga_desmontagem}" />
                <telerik:GridViewDataColumn Header="obs recebimento" DataMemberBinding="{Binding obs_recebimento}"/>
                <telerik:GridViewDataColumn Header="data chegada galpao" DataMemberBinding="{Binding data_chegada_galpao, StringFormat=\{0:dd/MM/yyyy\}}" />
                <telerik:GridViewDataColumn Header="hora chegada galpao" DataMemberBinding="{Binding hora_chegada_galpao, StringFormat=\{0:hh/mm\}}" />
                <telerik:GridViewDataColumn Header="obs embalagem" DataMemberBinding="{Binding obs_embalagem}" />
                <telerik:GridViewDataColumn Header="vl_est_frete" DataMemberBinding="{Binding vl_est_frete}"/>
                <telerik:GridViewDataColumn Header="vl_est_seguro" DataMemberBinding="{Binding vl_est_seguro}"/>
                <telerik:GridViewDataColumn Header="vl_est_icms" DataMemberBinding="{Binding vl_est_icms}"/>
                <telerik:GridViewDataColumn Header="vl_est_total" DataMemberBinding="{Binding vl_est_total}"/>
                <telerik:GridViewDataColumn Header="data_altera" DataMemberBinding="{Binding data_altera}" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="alterado_por" DataMemberBinding="{Binding alterado_por}" IsReadOnly="True"/>
                
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
    
</UserControl>
