<telerik:RadWindow  x:Class="Operacional.Views.EquipeExterna.FormularioRelatorioDiarioWeb"         
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Operacional.Views.EquipeExterna"
             mc:Ignorable="d" 
             ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
             Height="800" Width="1000">
    
    <telerik:RadWindow.Resources>
        <!-- Estilo simples para rótulos pequenos -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Margin" Value="2,0,2,2" />
        </Style>

        <!-- Estilo padrão para TextBox nos formulários -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="26" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <!-- Cabeçalho de seção (fundo levemente azul dentro de um Border) -->
        <Style x:Key="SectionHeader" TargetType="Border">
            <Setter Property="Background" Value="#E8F2FB" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="#D6EAF7" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!-- Caixa de contorno para seções -->
        <Style x:Key="SectionBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="#DFEAF2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>
    </telerik:RadWindow.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- topo: sigla/fase/data/noite -->
                <RowDefinition Height="Auto"/>
                <!-- coordenador/assistente -->
                <RowDefinition Height="Auto"/>
                <!-- equipe interna -->
                <RowDefinition Height="Auto"/>
                <!-- equipe externa -->
                <RowDefinition Height="Auto"/>
                <!-- tipo/descricao -->
                <RowDefinition Height="*"/>
                <!-- mensagem -->
            </Grid.RowDefinitions>

            <!-- Linha 1: Sigla | Fase | Data | Noite -->
            <Grid Grid.Row="0" Margin="0,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Sigla -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Sigla" />
                    <TextBox x:Name="txtSigla" Text="{Binding Relatorio.sigla_serv}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>

                <!-- Fase -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Fase" />
                    <TextBox x:Name="txtFase" Text="{Binding Relatorio.fase}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>

                <!-- Data -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Data" />
                    <TextBox x:Name="txtData" Text="{Binding Relatorio.data}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>

                <!-- Noite -->
                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Noite" />
                    <TextBox x:Name="txtNoite" Text="{Binding Relatorio.noite}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>
            </Grid>

            <!-- Linha 2: Coordenador(a) | Assistente -->
            <Grid Grid.Row="1" Margin="0,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Coordenador(a)" />
                    <TextBox x:Name="txtCoordenador" Text="{Binding Relatorio.coordenador}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Assistente" />
                    <TextBox x:Name="txtAssistente" Text="{Binding Relatorio.assistente}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>
            </Grid>

            <!-- Linha 3: Equipe interna -->
            <Border Grid.Row="2" Style="{StaticResource SectionBox}">
                <StackPanel>
                    <Border Style="{StaticResource SectionHeader}">
                        <TextBlock Text="Equipe interna" FontWeight="SemiBold" Foreground="#224" />
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Entrada -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="6,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Entrada" />
                            <TextBox x:Name="txtEntrada" Text="{Binding Relatorio.interna_entrada}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>

                        <!-- Saída -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Saída" />
                            <TextBox x:Name="txtSaida" Text="{Binding Relatorio.interna_saida}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>

                        <!-- Pessoas -->
                        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="6,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Pessoas" />
                            <TextBox x:Name="txtPessoasInterna" Text="{Binding Relatorio.interna_pessoas}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Linha 4: Equipe externa -->
            <Border Grid.Row="3" Style="{StaticResource SectionBox}">
                <StackPanel>
                    <Border Style="{StaticResource SectionHeader}">
                        <TextBlock Text="Equipe externa" FontWeight="SemiBold" Foreground="#224" />
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Líder + Pessoas -->
                            <RowDefinition Height="Auto"/>
                            <!-- Linha adicional 1 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Linha adicional 2 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Linha adicional 3 -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Líder | Pessoas -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="6,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Líder" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="6,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Pessoas" />
                        </StackPanel>

                        <!-- Linhas adicionais (ex.: 3 posições com Nome | Pessoas) -->
                        <!-- Linha 1 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoNome1" Text="{Binding Relatorio.externa_lider1}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoPessoas1" Text="{Binding Relatorio.externa_pessoas1}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>

                        <!-- Linha 2 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoNome2" Text="{Binding Relatorio.externa_lider2}" Style="{StaticResource FormTextBox}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoPessoas2" Text="{Binding Relatorio.externa_pessoas2}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>

                        <!-- Linha 3 -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoNome3" Text="{Binding Relatorio.externa_lider3}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="6,4,6,0">
                            <TextBox x:Name="txtExternoPessoas3" Text="{Binding Relatorio.externa_pessoas3}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Linha 5: Tipo | Descrição -->
            <Grid Grid.Row="4" Margin="0,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Tipo" />
                    <TextBox x:Name="txtTipo" Text="{Binding Relatorio.tipo}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Descrição" />
                    <TextBox x:Name="txtDescricao" Text="{Binding Relatorio.descricao}" IsReadOnly="True" Style="{StaticResource FormTextBox}" />
                </StackPanel>
            </Grid>

            <!-- Linha 6: Mensagem (grande) -->
            <Border Grid.Row="5" Style="{StaticResource SectionBox}">
                <StackPanel>
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Mensagem" />
                    <TextBox x:Name="txtMensagem" Text="{Binding Relatorio.mensagem}" IsReadOnly="True"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" Height="160" Foreground="Black" FontSize="14" />
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</telerik:RadWindow>
