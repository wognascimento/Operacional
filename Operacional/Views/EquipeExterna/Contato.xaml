<UserControl x:Class="Operacional.Views.EquipeExterna.Contato"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.EquipeExterna"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    
    <Grid>


        <telerik:RadGridView 
            AutoGenerateColumns="False"
            Margin="2"
            SelectionUnit="Cell"
            ShowGroupPanel="False"
            ItemsSource="{Binding Contatos}" 
            NewRowPosition="Bottom" 
            GroupRenderMode="Flat"
            RowValidated="ContatoRowValidated">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="#" IsReadOnly="True" DataMemberBinding="{Binding cod_linha}"/>
                <telerik:GridViewDataColumn Header="NOME" Width="150" DataMemberBinding="{Binding nome}"/>
                <telerik:GridViewDataColumn Header="FUNÇÃO" Width="150" DataMemberBinding="{Binding funcao}"/>
                <telerik:GridViewDataColumn Header="TELEFONE 1" Width="150" DataMemberBinding="{Binding tel_1}"/>
                <telerik:GridViewDataColumn Header="TELEFONE 2" Width="150" DataMemberBinding="{Binding tel_2}"  />
                <telerik:GridViewDataColumn Header="E-MAIL" Width="150" DataMemberBinding="{Binding e_mail}"  />
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>


    </Grid>
    
</UserControl>
