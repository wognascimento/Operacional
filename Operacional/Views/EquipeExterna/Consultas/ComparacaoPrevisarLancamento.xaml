<UserControl x:Class="Operacional.Views.EquipeExterna.Consultas.ComparacaoPrevisarLancamento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.EquipeExterna.Consultas" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>


        <telerik:RadGridView
            IsBusy="{Binding IsBusy}" 
            AutoGenerateColumns="True"
            IsReadOnly="True"
            ShowGroupPanel="False"
            GroupRenderMode="Flat"
            SelectionMode="Extended"
            ClipboardCopyMode="Cells, Header"
            ItemsSource="{Binding Comparacoes}"
            AutoGeneratingColumn="RadGridView_AutoGeneratingColumn"/>


    </Grid>
    
</UserControl>
