<UserControl x:Class="Operacional.Views.Transporte.CadastroTransportadora"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Operacional.Views.Transporte" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <telerik:RadGridView 
            AutoGenerateColumns="true"
            SelectionMode="Extended"
            ClipboardCopyMode="Cells, Header"
            ShowGroupPanel="False"
            ItemsSource="{Binding Transportadoras}" 
            NewRowPosition="Bottom"
            GroupRenderMode="Flat"
            RowValidated="TransportadoraRowValidated"/>

    </Grid>
    
</UserControl>
